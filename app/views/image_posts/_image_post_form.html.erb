<div class="image-form" id="image-form">  
  <%= form_for @post, remote: true do |f| %>
    <%= f.label :body, "Description:"%><br>
    <%= f.text_area :body, size: "40x2" %><br>
    <%= f.file_field :picture, accept: 'image/png,image/jpeg'%><br>

    <%= f.submit "Publish", class: 'button'%>
  <% end %>
  <div class="post-image">
    <%= link_to "Publish a text post", new_text_post_path, remote: true%>
  </div>
</div>